<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rizkywelly.taskslave.TaskDetailFragment"
    android:id="@+id/fragment_task_detail_layout">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="32dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/task_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toLeftOf="@+id/text_view_task_title"
        android:layout_toStartOf="@+id/text_view_task_title"
        />

    <TextView
        android:id="@+id/text_view_task_title"
        android:layout_width="wrap_content"
        android:layout_height="32dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/text_view_description"
        android:layout_toRightOf="@id/text_view_description" />

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/text_view_description"
        android:inputType="text"
        android:layout_toRightOf="@id/text_view_description"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="32dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_view_title"
        android:text="@string/task_description"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/text_view_task_description"
        android:layout_width="wrap_content"
        android:layout_height="160dip"
        android:layout_alignEnd="@id/text_view_task_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/text_view_task_title"
        android:layout_below="@id/text_view_description" />

    <EditText
        android:id="@+id/edit_text_task_description"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_alignEnd="@id/text_view_task_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/text_view_task_title"
        android:inputType="textMultiLine"
        android:layout_below="@id/text_view_description"
        android:visibility="gone"
        />

</RelativeLayout>
